{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "resolveJsonModule": true
  },

  "include": [
    "bot/**/*",
    "typings/**/*"
  ],

  "exclude": [
    "node_modules"
  ]
}